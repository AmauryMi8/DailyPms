@page "/studentdetail/{StudentId}"

<h1 class="page-title">Details for @CurrentStudent.FirstName @CurrentStudent.LastName</h1>

<div class="col-12 row">
    <div class="col-2">
        @*<img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{CurrentStudent.StudentID}.jpg")" class="img-responsive rounded-circle employee-detail-img" />*@
    </div>
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Student ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@CurrentStudent.StudentID</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">First name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.FirstName</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Last name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.LastName</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Birthdate</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.BirthDate.ToShortDateString()</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.Email</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Street</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.Street</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Zip</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.PostalCode</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">City</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.City</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Phone number</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.Phone</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Parent 1</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.Parent1</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Parent 2</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.Parent2</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Registration date</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.RegistrationDate.ToShortDateString()</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">School ID</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.SchoolID</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Classe ID</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@CurrentStudent.ClasseID</label>
                </div>
            </div>
        </div>
    </div>
</div>
